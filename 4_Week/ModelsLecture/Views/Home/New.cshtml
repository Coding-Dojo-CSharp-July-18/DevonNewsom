@model Friend
<h1>Add a new Friend!</h1>
<hr>

<form asp-action="Create" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" id="">
    </div>

    <div class="form-group">
        <span asp-validation-for="Location"></span>
        <label asp-for="Location"></label>
        <input type="text" asp-for="Location" id="">
    </div>

    <div class="form-group">
        <span asp-validation-for="Age"></span>
        <label asp-for="Age"></label>
        <input type="number" asp-for="Age" id="">
    </div>

    <div class="form-group">
        <span asp-validation-for="Email"></span>
        <label asp-for="Email"></label>
        <input asp-for="Email" id="">
    </div>

    <input type="submit" value="Add Friend">
</form>